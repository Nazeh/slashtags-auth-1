{
  "compilerOptions": {
    "outDir": "types",

    // shared
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "allowJs": true,
    "checkJs": true,
    "noEmitOnError": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "composite": true,
    "isolatedModules": true,
    "declarationMap": true,
    // module resolution
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // advanced
    "importsNotUsedAsValues": "error",
    "skipLibCheck": true,
    // paths
    "paths": {
      "@synonymdev/slashtag*": ["./packages/*"]
    }
  },
  "include": ["index.js", "lib", "test", "../../declarations.d.ts"]
}
